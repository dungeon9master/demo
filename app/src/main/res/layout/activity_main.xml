<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codeasylums.demo.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button1"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:background="#060606"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:background="#0e0d0d"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:background="#090909"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:layout_above="@+id/button7"
        android:layout_toStartOf="@+id/button8"
        android:background="#040404"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:background="#060606"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:background="#0b0b0b"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:layout_above="@+id/button10"
        android:layout_toStartOf="@+id/button8"
        android:background="#040404"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:background="#030303"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:background="#060606"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button7"
        android:background="#060606"
        android:textColor="#fefcfc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/button11"
        android:layout_above="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:background="#fe1212"
        android:textColor="#fcea5d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/button12"
        android:layout_above="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:background="#fb0c0c"
        android:textColor="#fbea6d" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/button13"
        android:layout_above="@+id/button12"
        android:layout_alignEnd="@+id/button12"
        android:layout_toEndOf="@+id/button20"
        android:textColor="#fbf35c"
        android:background="#f50606" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/button14"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button10"
        android:background="#1a8cf8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/button15"
        android:background="#21f4b5"
        android:layout_above="@+id/button12"
        android:layout_toEndOf="@+id/button12" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/button20"
        android:layout_above="@+id/button11"
        android:layout_alignStart="@+id/button11"
        android:background="#fb0505"
        android:textColor="#fce40f" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/button19"
        android:background="#f70505"
        android:textColor="#fcee53"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button3" />

</RelativeLayout>
